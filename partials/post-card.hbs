{{#has tag="#ad"}}
<article class="post-card">
<header class="post-card-header">
                <span class="post-card-tags" style="padding: 10px;">Advertentie</span>
            </header>
    <div class="post-card-content" style="display: flex; flex-direction: column; justify-content: center;">
        <span>
            {{ content }}
        </span>
    </div>
</article>

{{ else }}
<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
    </a>
    {{/if}}
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                {{#if primary_tag}}
                <span class="post-card-tags">{{primary_tag.name}}</span>
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{excerpt words="33"}}</p>
            </section>
        </a>
        <footer class="post-card-meta">
            <ul class="author-list">
            
            {{#has tag="#highlight"}}
                <li class="author-list-item">
                    <div class="author-name-tooltip">
                        Populair Artikel
                    </div>
                    <div class="author-profile-image" style="background-color: #fff; color: #FF9800;" alt="Populair Artikel">
                    <i class="material-icons">
                    whatshot
                    </i>
                    </div>
                </li>
            {{/has }}
            </ul>
            <span class="reading-time">{{date published_at timeago='true'}}</span>
        </footer>
    </div>
</article>
{{/ has}}